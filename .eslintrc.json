{
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": [
    "**/*.js",
    "**/*.css"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": [
      "off"
    ],
    "func-names": [
      "off"
    ],
    "no-plusplus": [
      "off"
    ],
    "comma-dangle": [
      "off"
    ],
    "import/extensions": [
      "off"
    ],
    "import/no-unresolved": [
      "off"
    ],
    "no-restricted-globals": [
      "off"
    ],
    "no-lonely-if": [
      "off"
    ],
    "operator-linebreak": [
      "off"
    ],
    "arrow-body-style": [
      "off"
    ],
    "prefer-destructuring": [
      "off"
    ],
    "prefer-arrow-callback": [
      "off"
    ],
    "import/prefer-default-export": [
      "off"
    ],
    "@typescript-eslint/ban-ts-comment": [
      "off"
    ],
    "@typescript-eslint/no-explicit-any": [
      "off"
    ],
    "@typescript-eslint/explicit-module-boundary-types": [
      "off"
    ],
    "@typescript-eslint/no-non-null-assertion": [
      "off"
    ]
  }
}